{
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "./",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/polyfills.ts",
    "src/test.ts"
  ]
}
