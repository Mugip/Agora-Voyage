{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "types": ["node", "jasmine"]
  },
  "files": [
    "polyfills.ts",
    "test.ts"
  ],
  "include": ["src/**/*.ts", "src/**/*.spec.ts", "./**/*.ts", "./**/*.d.ts"],
  "exclude": ["node_modules"]
}
